---
const { img1, img2 } = Astro.props
---

<imagecard>
    <div class="image-container">
        <img src={img1} />
    </div>
    <div class="image-container">
        <img src={img2} />
    </div>
</imagecard>

<style>
    imagecard {
        background: #fff;
        display: flex;
        flex-direction: row;
        /* flex-direction: column; */
        justify-content: space-between;
    }

    .image-container {
        padding-top: 5%;
        width: 50%;
        /* height: 30%; */
        padding-left: 5%;
        padding-right: 5%;
        margin-right: 20px;
        
        
    }
    img {
        width: 100%;
        height: 100%;
        border-radius: 5%;
    }
</style>